<div class="container" style="margin-top:2%">
    <div class="row">
       
        <main role="main" class="col-md-12" style="margin-left: 2%; margin-right: 6%; margin-bottom: 20%;">
            @if (Model.Count == 0)
            {
                <h5>No notifications available at the moment.</h5>}

            @foreach (var e in Model)
            {

                <div style="margin-top: 1%;padding-top: 1%;padding-bottom: 1%;padding-left: 2%;border-radius: 25px;background: #9BCD9B;">
                <form asp-action="Clear_Notification" method="post">
                    <button class="btn" id="x" type="submit" asp-controller="Donor" asp-action="Clear_Notification" asp-route-id="@e.d_id" asp-route-fid="@f_id" asp-route-prim="@e.d_prim" style="position: relative; float: right; top: -10px; background-color: transparent;">
                        X
                    </button>
                </form>

                <p>You have sent Tk @e.d_amount for the event "@e.d_title". TrxID: @e.d_tid at @e.d_date @e.d_time</p>
                </div>
            }

        </main>

    </div>

</div>
