
@{
    ViewData["Title"] = "SIgnUp_Fundraiser";
}
@model Shahajjokori.Models.Fundraiser

<div style="text-align: center; margin-top:3%;">
    <h1>Sign Up as a Fundraiser</h1>
    <h5>A Total of @ViewData["Total_fundraiser"] Fundraisers have joined with us!</h5>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6" style="text-align: center; margin-top: 6%; margin-bottom: 5%;">
            <img src="~/images/Sign-up-Fundraiser.jpg" alt="logo" style="display: block; height: auto; max-width: 100%;">
        </div>
        <div class="col-md-6" style="text-align: center; margin-top:5%; margin-bottom: 5%;">
            <form asp-action="SignUp_Fundraiser_entry" method="post">
                <div class="form-group">
                    <label for="exampleInputEmail1">Name</label>
                    <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter name" asp-for="f_name" required>
                    <small id="emailHelp" class="form-text text-muted">Yor name will be shown out in the website with your event.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" asp-for="f_email" required>
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Enter password" asp-for="f_password" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Phone</label>
                    <input type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter phone number" asp-for="f_phone" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">About</label>
                    <textarea class="form-control" rows="5" id="exampleInputEmail1" placeholder="Write something about you or your organization" asp-for="f_about"></textarea>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">I accept the terms and conditions</label>
                </div>
                <button type="submit" class="btn btn-primary" href="@Url.Action("SignUp_Fundraiser_entry","Home")" style="margin-top:5%">Sign Up</button>
            </form>
        </div>

    </div>

</div>


