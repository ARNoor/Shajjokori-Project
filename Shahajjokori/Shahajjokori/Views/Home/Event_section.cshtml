@{
}
@model List<Event>

<div class="container" style="margin-top: 5%;">
    <div class="row">
        @foreach (var e in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    @{
                        string path = "~/images/" + e.e_pic;
                    }
                    <img class="card-img-top" src="@path" alt="logo" style="display: block; height: auto; max-width: 100%;" asp-append-version="true">

                    <div class="card-body">
                        <h4 class="card-title">@e.e_title</h4>
                        <p>@e.e_location</p>
                        <a asp-controller="Home" asp-action="Event_Details" asp-route-id="@e.e_id">View Details</a>
                        <!--<form asp-action="Event_Details" method="post">
                            <input type="button" value="@e.e_id" />View Details
                            <input type="button" value="Event_Details" onclick="location.href='@Url.Action("Event_Details", "Home")' + @e.e_id" />
                        </form>-->

                    </div>
                </div>

            </div>
        }
    </div>
</div>
