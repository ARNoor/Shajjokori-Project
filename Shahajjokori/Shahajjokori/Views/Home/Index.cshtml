@{
    ViewData["Title"] = "Home Page";
}
@model List<Event>
<style>
    .see_more a.main-nav-item:hover {
        color: #DDD;
        border: 1px;
    }
    
</style>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/wall-pic1.jpeg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/wall-pic3.jpeg" alt="Second slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div style="background-color: #FDF5E6;">
    <div class="container" style="padding-top: 5%; padding-bottom:5%; text-align: center;">
        <h2 style="margin-bottom: 2%;">Recent Fundraising Events</h2>
        <br />
        <div class="row">

            @foreach (var e in Model)
            {
<div class="col-md-4">
    <div class="card">
        @{ string path = "~/images/" + e.e_pic; }
        <img class="card-img-top" src="@path" alt="logo" style="display: block; height: 15vw; width: 100%; object-fit: cover;" asp-append-version="true">

        <div class="card-body">
            <h4 class="card-title">@e.e_title</h4>
            <p>@e.e_location</p>
            <a class="main-nav-item" asp-controller="Home" asp-action="Event_Details" asp-route-id="@e.e_id" style="text-decoration: none;">View Details</a>

        </div>
    </div>

</div>}

        </div>
    </div>
    <div class="container" style="padding-bottom: 3%;">
        <div class="row">
            <div class="col-md-12" style="text-align:center">
                <div class="see_more">
                    <a class="btn btn-outline-secondary" name="option" asp-controller="Home" asp-action="Event_section_show_all" asp-route-id="Show All" >See All Events</a>
                </div>
                
            </div>
        </div>

    </div>
    
</div>

<div style="background: url('@Url.Content("~/images/pexels-photo-6994985.jpeg")'); padding-top:5%; padding-bottom: 5%;">
    <div class="container" style="text-align:center">
        <div class="row">
            <div class="col-md-6" style="font-size:large">
                <p style="color: white; font-size:larger; ">Check out the events happening where you can participate yourself!</p><br>
                <a class="btn btn-success" name="option" asp-controller="Home" asp-action="Local_event_show" style="        color: white;
        font-size: large;
        text-decoration: none;
        margin-top: 5%;
">Local Events</a>
            </div>
            <div class="col-md-6">
                
            </div>
        </div>

    </div>

</div>

